{
  "extends": "stylelint-config-standard",
  "ignoreFiles": ["src/styles/overwrite.scss", "src/styles/theme.scss", "**/loading.component.scss"],
  "rules": {
    "no-empty-source": null,
    "selector-type-no-unknown": null,
    "length-zero-no-unit": null,
    "at-rule-no-unknown": null,
    "no-descending-specificity": null,
    "selector-pseudo-element-no-unknown": [true, { "ignorePseudoElements": ["ng-deep", "::ng-deep"] }]
  }
}
